            <form method='POST' action='/game/<%= game.id %>/4/remove?_method=PUT'>
            <button type="submit">Delete</button>
            </form>
        </td>
    </tr>
</table>
<form method='POST' action='/game/<%= game.id %>?_method=DELETE'>
    <button type="submit" class="warningbtn">Delete Game</button>
</form>
<form method='POST' action='/game/<%= game.id %>/start?_method=PUT'>
    <button type="submit" class="submitbtn">Start Game</button>
</form>